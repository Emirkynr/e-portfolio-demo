{
    <p>Ad: @Model.DisplayUser.Name</p>
    <p>Soyad: @Model.DisplayUser.Surname</p>
    <p>Doğum Tarihi: 11/05/2004</p>
    <p>Telefon: 501-1312930</p>
    <p>Github: github.com/Emirkynr</p>
    <p>Mail: @Model.DisplayUser.Email</p>
}
else
{
    <p>Kullanıcı bilgileri bulunamadı.</p>
}