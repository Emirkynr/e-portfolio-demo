@page
@model e_portfolio.Pages.LoginModel

<h1>Login</h1>
<form method="post">
    <div>
        <label for="Username">Username</label>
        <input type="text" id="Username" name="Username" asp-for="Username" />
    </div>
    <div>
        <label for="Password">Password</label>
        <input type="password" id="Password" name="Password" asp-for="Password" />
    </div>
    <button type="submit">Login</button>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p style="color:red;">@Model.ErrorMessage</p>
}
